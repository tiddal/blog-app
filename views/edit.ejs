<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit Blog</div>
	<form
		class="ui form"
		action="/blogs/<%= blog.id %>?_method=PUT"
		method="POST"
	>
		<div class="field">
			<label>Title</label>
			<input
				type="text"
				name="blog[title]"
				placeholder="Title"
				value="<%= blog.title %>"
				required
			/>
		</div>
		<div class="field">
			<label>Image</label>
			<input
				type="text"
				name="blog[image]"
				placeholder="Image"
				value="<%= blog.image %>"
				required
			/>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" placeholder="What's on your mind?" required>
<%= blog.body %>
      </textarea>
		</div>
		<input class="ui green button" type="submit" value="Update" />
	</form>
</div>

<% include partials/footer %>
